<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:layout_height="200dp"
    android:layout_width="320dp"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_height="wrap_content"
        android:text="How would you like to choose an image for your recipe?"
        android:textSize="20sp"
        android:layout_margin="15dp"
        android:textColor="@color/primaryText"/>

    <ImageButton
        android:id="@+id/selectFileImage"
        android:layout_width="72dp"
        android:src="@drawable/ic_insert_drive_file_black_24dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:layout_height="72dp" />

    <ImageButton
        android:id="@+id/selectCameraImage"
        android:layout_margin="20dp"
        android:src="@drawable/ic_camera_add"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_width="72dp"
        android:layout_height="72dp" />

</RelativeLayout>
