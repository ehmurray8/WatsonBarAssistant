<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.speakeasy.watsonbarassistant">

    <uses-feature android:name="android.hardware.camera" />
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".BarAssistant"
        android:allowBackup="true"
        android:icon="@mipmap/ic_old_fashioned"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_old_fashioned"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="net.hockeyapp.android.appIdentifier"
            android:value="${HOCKEYAPP_APP_ID}" />

        <activity
            android:name=".MainMenu"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".RecipeDetail" />
        <activity android:name=".Login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".UserProfile" />
        <activity android:name=".RecipeCollection" />
        <activity android:name=".ShoppingCart"></activity>
    </application>

</manifest>